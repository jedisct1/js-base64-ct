{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": false,
    "rootDir": ".",
    "declaration": true,
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "allowUnreachableCode": false
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}